{
  "name": "MCP Content Library",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "postCreateCommand": "bash bootstrap.sh --non-interactive",

  "forwardPorts": [8000],

  "portsAttributes": {
    "8000": {
      "label": "MCP HTTP Server",
      "onAutoForward": "openBrowser",
      "visibility": "public",
      "protocol": "http"
    }
  },

  "postStartCommand": "bash .devcontainer/postStart.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false
      }
    }
  },

  "remoteEnv": {
    "MCP_SNIPPETS_ROOT": "${containerWorkspaceFolder}/.mcp_snippets",
    "MCP_HTTP_HOST": "0.0.0.0",
    "MCP_HTTP_PORT": "8000"
  }
}
