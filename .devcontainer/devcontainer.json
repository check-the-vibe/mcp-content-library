{
  "name": "MCP Content Library",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "postCreateCommand": "bash bootstrap.sh --non-interactive",

  "forwardPorts": [8000],

  "portsAttributes": {
    "8000": {
      "label": "MCP HTTP Server",
      "onAutoForward": "openBrowser",
      "visibility": "public",
      "protocol": "http"
    }
  },

  "postStartCommand": "bash -c 'source .venv/bin/activate && python server_http.py > /tmp/mcp-server.log 2>&1 &'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "black"
      }
    }
  },

  "remoteEnv": {
    "MCP_SNIPPETS_ROOT": "${containerWorkspaceFolder}/.mcp_snippets",
    "MCP_HTTP_HOST": "0.0.0.0",
    "MCP_HTTP_PORT": "8000"
  }
}
